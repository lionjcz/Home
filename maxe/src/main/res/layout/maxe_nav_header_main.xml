<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/maxe_nav_header_height"
    android:background="@drawable/maxe_side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/maxe_activity_horizontal_margin"
    android:paddingTop="@dimen/maxe_activity_vertical_margin"
    android:paddingRight="@dimen/maxe_activity_horizontal_margin"
    android:paddingBottom="@dimen/maxe_activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/maxe_nav_header_vertical_spacing"
        app:srcCompat="@mipmap/maxe_header_icon"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/name_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/maxe_nav_header_vertical_spacing"
        android:text="@string/maxe_nav_header_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/maxe_nav_header_subtitle" />

</LinearLayout>
