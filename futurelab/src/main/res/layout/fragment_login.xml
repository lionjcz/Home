<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data class="LoginBinding">
        <import type="android.view.View"/>
        <variable
            name="vm"
            type="com.jekma.futurelab.LoginViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_6">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_vertical_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_vertical_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_horizontal_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.2" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_horizontal_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.95" />
        <ImageView
            android:id="@+id/ivMainIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintRight_toLeftOf="@id/gl_vertical_2"
            app:layout_constraintLeft_toRightOf="@+id/gl_vertical_1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/gl_horizontal_2"
            app:srcCompat="@drawable/ic_company" />
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardCornerRadius="30dp"
            app:layout_constraintRight_toLeftOf="@id/gl_vertical_2"
            app:layout_constraintLeft_toRightOf="@+id/gl_vertical_1"
            app:layout_constraintBottom_toTopOf="@id/gl_horizontal_1"
            app:layout_constraintTop_toBottomOf="@id/gl_horizontal_2">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_5"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <LinearLayout
                    android:id="@+id/ll_bar_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/cl_login">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:onClick="@{v -> vm.doPressLogin(v)}">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:visibility="@{vm.obIsLoginMode ? View.INVISIBLE : View.VISIBLE}"
                            android:background="@{vm.obIsNightMode ? @drawable/bg_bar_login_night : @drawable/bg_bar_login}"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            tools:visibility="visible" />
                        <TextView
                            android:id="@+id/bar_login"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/text_1"
                            android:text="@string/member_btn_login"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />
                        <ImageView
                            android:id="@+id/iv_under_login"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_under_login"
                            android:layout_marginTop="6dp"
                            android:visibility="@{vm.obIsLoginMode ? View.VISIBLE : View.INVISIBLE}"
                            app:layout_constraintRight_toRightOf="@id/bar_login"
                            app:layout_constraintLeft_toLeftOf="@id/bar_login"
                            app:layout_constraintTop_toBottomOf="@id/bar_login"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="@{v -> vm.doPressSignUp(v)}">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="@{vm.obIsLoginMode ? View.VISIBLE : View.INVISIBLE}"
                            android:background="@{vm.obIsNightMode ? @drawable/bg_bar_signup_night : @drawable/bg_bar_signup}"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/member_text_register"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                        <ImageView
                            android:id="@+id/iv_under_register"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_under_login"
                            android:layout_marginTop="6dp"
                            android:visibility="@{vm.obIsLoginMode ? View.INVISIBLE : View.VISIBLE}"
                            app:layout_constraintTop_toBottomOf="@id/textView"
                            app:layout_constraintRight_toRightOf="@id/textView"
                            app:layout_constraintLeft_toLeftOf="@id/textView"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_login"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/ll_bar_button"
                    app:layout_constraintBottom_toBottomOf="parent">
                    <!--login-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="@{vm.obIsLoginMode ? View.VISIBLE:View.GONE}"
                        tools:visibility="gone">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cd_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="32dp"
                            android:background="@drawable/bg_radius"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toTopOf="@id/cd_pwd">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:afterTextChanged="@{text -> vm.onAccountTextChange(text)}"
                                android:drawableStart="@drawable/ic_pwd"
                                android:drawablePadding="10dp"
                                android:ems="10"
                                android:hint="@string/member_ed_hint_userid"
                                android:inputType="textPersonName"
                                android:text="@={vm.obAccount}"
                                android:textColor="@color/text_1"
                                android:padding="15dp"
                                android:background="@null"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cd_pwd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:background="@drawable/bg_radius"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/cd_id">
                            <EditText
                                android:id="@+id/et_pwd"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:afterTextChanged="@{text -> vm.onPasswordTextChange(text)}"
                                android:drawableStart="@drawable/ic_pwd"
                                android:drawablePadding="10dp"
                                android:ems="10"
                                android:hint="@string/member_ed_hint_password"
                                android:inputType="textPassword"
                                android:text="@={vm.obPassword}"
                                android:textColor="@color/text_1"
                                android:background="@null"
                                android:padding="15dp"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <CheckBox
                            android:layout_marginTop="16dp"
                            android:id="@+id/cb_keep_login"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:autoSizeMinTextSize="1dp"
                            android:autoSizeTextType="uniform"
                            android:lines="1"
                            android:checked="@={vm.obIsKeepLogin}"
                            android:text="@string/member_txt_rem_login"
                            android:textColor="@color/text_1"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:layout_marginLeft="16dp"
                            android:buttonTint="@color/text_8"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/cd_pwd"/>
                        <TextView
                            android:layout_marginLeft="2dp"
                            tools:text="Forget your password"
                            android:id="@+id/tv_forget_pwd"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:autoSizeMinTextSize="1px"
                            android:autoSizeTextType="uniform"
                            android:gravity="right|center"
                            android:lines="1"
                            android:onClick="@{v -> vm.doPressForgetPassword(v)}"
                            android:text="@string/member_txt_forget_password"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/text_2"
                            android:layout_marginRight="16dp"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="@id/cb_keep_login"
                            app:layout_constraintBottom_toBottomOf="@id/cb_keep_login"/>
                        <Button
                            android:id="@+id/btn_login"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/mutiple_using_btnstyle"
                            android:onClick="@{v -> vm.doLogin(v, false)}"
                            android:text="@string/member_btn_login"
                            android:layout_marginRight="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginBottom="16dp"
                            android:textColor="@color/text_5"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- SignUp-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="@{vm.obIsLoginMode ? View.GONE:View.VISIBLE}"
                        tools:visibility="visible">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cv_first"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="32dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginLeft="16dp"
                            android:background="@drawable/bg_radius"
                            app:layout_constraintTop_toTopOf="parent">
                            <EditText
                                android:id="@+id/et_phone"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:drawableStart="@drawable/ic_phone"
                                android:drawablePadding="10dp"
                                android:ems="10"
                                android:text="@={vm.obMobileNumber}"
                                android:hint="@string/member_ed_hint_phone"
                                android:inputType="phone"
                                android:textColor="@color/text_1"
                                android:background="@null"
                                android:padding="15dp"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cv_second"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="8dp"
                            android:layout_margin="16dp"
                            android:background="@drawable/bg_radius"
                            app:layout_constraintTop_toBottomOf="@+id/cv_first">
                            <EditText
                                android:id="@+id/et_email"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:drawableStart="@drawable/ic_email"
                                android:drawablePadding="10dp"
                                android:ems="10"
                                android:text="@={vm.obEmail}"
                                android:hint="@string/member_ed_hint_email"
                                android:inputType="textEmailAddress"
                                android:textColor="@color/text_1"
                                android:background="@null"
                                android:padding="15dp"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cv_third"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginBottom="8dp"
                            android:background="@{vm.obSignUpPasswordBackground}"
                            app:layout_constraintTop_toBottomOf="@+id/cv_second"
                            app:layout_constraintBottom_toTopOf="@+id/tv_pwd_alert">
                            <EditText
                                android:id="@+id/et_pwd_in_signup"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:drawableStart="@drawable/ic_pwd"
                                android:drawablePadding="10dp"
                                android:ems="10"
                                android:hint="@string/member_txt_password"
                                android:text="@={vm.obPassword_register}"
                                android:textColor="@color/text_1"
                                android:background="@null"
                                android:padding="15dp"
                                android:afterTextChanged="@{text -> vm.onSignUpPasswordTextChange(text)}" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <TextView
                            android:id="@+id/tv_pwd_alert"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_4"
                            android:text="@{vm.obSignUpPasswordHint}"
                            android:visibility="@{vm.obSignUpPasswordHintVisiable}"
                            app:layout_constraintTop_toBottomOf="@id/cv_third"
                            app:layout_constraintRight_toRightOf="@id/cv_third"
                            app:layout_constraintBottom_toTopOf="@+id/cl_fourth"
                            tools:text="密碼需要8~16字，含英數字與大小寫"
                            tools:visibility="visible" />
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cl_fourth"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginBottom="16dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/bg_radius"
                            app:layout_constraintTop_toBottomOf="@id/tv_pwd_alert">
                            <EditText
                                android:id="@+id/et_pwd_repeat"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:drawableStart="@drawable/ic_pwd"
                                android:drawablePadding="10dp"
                                android:ems="10"
                                android:hint="@string/member_txt_password_again"
                                android:text="@={vm.obPassword2}"
                                android:inputType="textPassword"
                                android:textColor="@color/text_1"
                                android:background="@null"
                                android:padding="15dp"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <TextView
                            android:id="@+id/tv_privacy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_privacy_and_terms"
                            android:textColor="@color/text_8"
                            android:layout_marginBottom="16dp"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintBottom_toTopOf="@id/btn_verify"/>
                        <Button
                            android:id="@+id/btn_verify"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/mutiple_using_btnstyle"
                            android:text="@string/member_btn_verify"
                            android:onClick="@{v -> vm.doRegister()}"
                            android:layout_marginTop="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginBottom="16dp"
                            android:textColor="@color/text_5"
                            app:layout_constraintBottom_toBottomOf="parent"
                            tools:text="@string/member_btn_verify" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>